<!DOCTYPE html>
<html>
  <%- include('./partials/header'); -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar'); -%></div>
        <div class="col-sm-10">
          <h1><%= title %>: <%= developer.name %></h1>

          <% if(developer_games.length){ %>
          <p>
            <strong
              >Delete the following Games before attempting to delete this
              Developer.</strong
            >
          </p>
          <div style="margin-left: 20px; margin-top: 20px">
            <h4>Games</h4>
            <dl>
              <% developer_games.forEach((game)=>{ %>
              <dt><a href="<%" ="game.url" %>><%= game.title %></a></dt>
              <%=
              <dd>game.summary</dd>
              %> <% }); %>
            </dl>
          </div>
          <% }else{ %>
          <p>Do you really want to delete this Author?</p>
          <form method="post">
            <div class="form-group">
              <input
                type="hidden"
                id="developerid"
                class="form-control"
                name="developerid"
                value="<%= developer._id %>"
              />
            </div>
            <button class="btn btn-primary" type="submit">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
